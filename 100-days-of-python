<script>
// Start date
const startDate = new Date('2025-11-17T00:00:00+03:00'); // EAT
const endDate = new Date(startDate);
endDate.setDate(startDate.getDate() + 99);

// Full topics with embedded links (abbreviated for script; expand as needed)
const fullTopics = [
  // Days 1-20: Foundations
  "Day 1: Setup, print, variables + <a href='https://www.coursera.org/learn/python'>Coursera Python (free)</a>",
  "Day 2: Strings, formatting + <a href='https://www.freecodecamp.org/learn/scientific-computing-with-python/'>freeCodeCamp (free)</a>",
  "Day 3: Numbers, conversion + Official Docs (free)",
  "Day 4: Lists & methods + Udemy Python ($15)",
  "Day 5: Slicing, comprehensions",
  "Day 6: Tuples",
  "Day 7: Weekly Test 1",
  "Day 8: If/else, booleans",
  "Day 9: For loops, range",
  "Day 10: While loops",
  "Day 11: Nested loops",
  "Day 12: Functions basics",
  "Day 13: Params, return",
  "Day 14: Weekly Test 2",
  "Day 15: Args, kwargs, scope",
  "Day 16: Dicts basics",
  "Day 17: Dict methods",
  "Day 18: Sets",
  "Day 19: Lambda, map/filter",
  "Day 20: Modules, Git + <a href='https://git-scm.com/book/en/v2'>Git Book (free)</a>",
  // Days 21-40: Flask
  "Day 21: Flask install, routes + <a href='https://flask.palletsprojects.com/en/stable/tutorial/'>Flask Tutorial (free)</a>",
  // ... (Continue pattern; script generates 100)
  // For full 100, loop fills with web/ML topics + links
];

for (let i = 20; i < 100; i++) {
  // Placeholder for remaining; in real, expand with specific links
  fullTopics[i] = `Day ${i+1}: ${i < 40 ? 'Flask advanced' : i < 60 ? 'Django/FastAPI' : i < 80 ? 'NumPy/Pandas EDA' : 'ML models + integration'}`;
}

const tbody = document.querySelector('#tracker tbody');
const now = new Date();

function updateClock() {
  const now = new Date();
  document.getElementById('clock').textContent = now.toLocaleString('en-KE', { timeZone: 'Africa/Nairobi' });
}
setInterval(updateClock, 1000);
updateClock();

for (let i = 0; i < 100; i++) {
  const dayDate = new Date(startDate);
  dayDate.setDate(startDate.getDate() + i);

  const row = document.createElement('tr');
  row.innerHTML = `
    <td><strong>Day ${i+1}</strong></td>
    <td>${dayDate.toLocaleDateString('en-GB')}</td>
    <td>${fullTopics[i]}</td>
    <td class="center"><input type="checkbox" id="passed${i}" disabled></td>
    <td class="center"><input type="checkbox" id="done${i}"></td>
    <td class="streak" id="streak${i}">-</td>
  `;
  tbody.appendChild(row);

  // Load saved state
  const passedKey = `pythonwebai_passed_${i}`;
  const doneKey = `pythonwebai_done_${i}`;
  if (localStorage.getItem(passedKey) === 'true') document.getElementById(`passed${i}`).checked = true;
  if (localStorage.getItem(doneKey) === 'true') document.getElementById(`done${i}`).checked = true;

  // Auto-check "Day Passed" at 22:00 EAT (locked)
  const dayEnd = new Date(dayDate);
  dayEnd.setHours(22, 0, 0, 0);
  if (now > dayEnd) {
    document.getElementById(`passed${i}`).checked = true;
    localStorage.setItem(passedKey, 'true');
  }

  // Manual learning checkbox
  document.getElementById(`done${i}`).addEventListener('change', function() {
    localStorage.setItem(doneKey, this.checked);
    updateStreak();
  });
}

// Auto-refresh for checks every minute
setInterval(() => { location.reload(); }, 60000);

function updateStreak() {
  let streak = 0;
  for (let i = 0; i < 100; i++) {
    const done = localStorage.getItem(`pythonwebai_done_${i}`) === 'true';
    if (done) streak++;
    else streak = 0;
    document.getElementById(`streak${i}`).textContent = streak;
  }
}
updateStreak();
</script>
